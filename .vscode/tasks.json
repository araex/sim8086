{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run sim8086",
            "type": "shell",
            "command": "zig",
            "args": ["build", "sim8086", "--", "${input:sim8086Arg}"],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "run tests",
            "type": "shell",
            "command": "zig build test",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "debug sim8086",
            "type": "shell",
            "command": "..\\raddbg\\raddbg.exe",
            "args": ["zig-out\\bin\\sim8086.exe", "${input:sim8086Arg}"],
            "group": "build",
            "dependsOn": ["build sim8086"],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "build sim8086",
            "type": "shell",
            "command": "zig",
            "args": ["build"],
            "group": "build",
            "presentation": {
                "reveal": "never",
                "panel": "shared"
            }
        }
    ],
    "inputs": [
        {
            "id": "sim8086Arg",
            "type": "promptString",
            "description": "Enter the argument for sim8086",
            "default": "${workspaceFolder}/src/data/listing_0051_memory_mov"
        }
    ]
}
